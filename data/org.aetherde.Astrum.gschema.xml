<schemalist gettext-domain="astrum">
  <schema id="org.aetherde.Astrum" path="/org/aetherde/Astrum/">

    <key name="window-width" type="i">
      <default>900</default>
      <summary>Window width</summary>
    </key>

    <key name="window-height" type="i">
      <default>600</default>
      <summary>Window height</summary>
    </key>

    <key name="window-maximized" type="b">
      <default>false</default>
      <summary>Window maximized</summary>
    </key>

    <key name="view-mode" type="s">
      <default>'list'</default>
      <summary>File view mode</summary>
      <description>Either 'list' or 'grid'</description>
    </key>

    <key name="show-hidden-files" type="b">
      <default>false</default>
      <summary>Show hidden files</summary>
    </key>

    <key name="sort-by" type="s">
      <default>'name'</default>
      <summary>Sort column</summary>
      <description>One of 'name', 'size', 'modified', 'type'</description>
    </key>

    <key name="sort-ascending" type="b">
      <default>true</default>
      <summary>Sort in ascending order</summary>
    </key>

    <key name="bookmarks" type="as">
      <default>[]</default>
      <summary>Custom bookmarks</summary>
    </key>

    <key name="list-icon-size" type="i">
      <default>32</default>
      <summary>Icon size in list view</summary>
      <description>Size of icons in pixels for list view (16-64)</description>
      <range min="16" max="64" />
    </key>

    <key name="grid-icon-size" type="i">
      <default>48</default>
      <summary>Icon size in grid view</summary>
      <description>Size of icons in pixels for grid view (32-128)</description>
      <range min="32" max="128" />
    </key>

  </schema>
</schemalist>
